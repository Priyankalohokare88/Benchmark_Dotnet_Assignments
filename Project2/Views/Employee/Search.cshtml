@model List<Project2.Models.employee>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/LayoutPage1.cshtml";
}

<h2>Search</h2>
<a class="btn btn-outline-warning fa fa-backward" style="background-color: #FFC300;color:black; float:right;" href="\Employee\Index"> Back</a>
<br />
<form class="form-inline">
    <div class="form-group">
        <label>Enter Name</label>
        <input type="text" class="form-control" id="e.Empname" name="e.Empname">
    </div>
    <br />
    <div class="form-group">
        <label>Enter Designation</label>
        <input type="text" class="form-control" id="e.Designation" name="e.Designation">
    </div>
    <br />
    <div class="form-group">
        <label>Enter Manager id</label>
        <input type="text" class="form-control" id="e.Mgid" name="e.Mgid">
    </div>
    <br />

    <div class="form-group">
        <label>Department Name</label>

        <select class="form-control" id="e.Depid" name="e.Depid">
            <option value="">Please Select option</option>
            @foreach (var dep in ViewBag.dep)
            {
                <option value="@dep.Depid">@dep.Depname</option>
            }

        </select>

    </div>
    <br />
