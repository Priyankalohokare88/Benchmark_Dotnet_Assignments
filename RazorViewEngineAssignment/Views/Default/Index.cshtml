@{
 
    List<int> dens = new List<int>() { 1000, 500, 100, 10, 1 };
    List<int> curcount = new List<int>();

    
    if (ViewBag.amt > 0)
    {
        
        int amount = ViewBag.amt;

        
        foreach (int den in dens)
        {
            
            int curcount1 = Convert.ToInt32(amount / den);

            
            curcount.Add(curcount1);

            //subtract the resulting amount from amountTemp
            amount = amount - (curcount1 * den);
        }
    }
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>Currency Denominations</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>Denomination</th>
                    <th>Count</th>
                    <th>Amount</th>
                </tr>
            </thead>

            <tbody>

                @for (int i = 0; i < curcount.Count; i++)
                {
                    <tr>
                        <td>@dens[i]</td>
                        <td>@curcount[i]</td>
                        <td>@(dens[i] * curcount[i])</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
