@model Project2.Models.employee

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutPage1.cshtml";
}

<h2>Details</h2>

<table class="table">
    <tr>
        <td>Employee Id</td>
        <td>@Model.Empid</td>
    </tr>
    <tr>
        <td>Name</td>
        <td>@Model.Empname</td>
    </tr>
    <tr>
        <td>Designation</td>
        <td>@Model.Designation</td>
    </tr>
    <tr>
        <td>Manager Id</td>
        <td>@Model.Mgid</td>
    </tr>
    <tr>
        <td>Email-Id</td>
        <td>@Model.Emailid</td>
    </tr>
    <tr>
        <td>HireDate</td>
        <td>@Model.Hire_date/td>
    </tr>
    <tr>
        <td>Salary</td>
        <td>@Model.sal</td>
    </tr>
    <tr>
        <td>Department Name</td>
        <td>@Model.Department.Depname</td>
    </tr>
   
</table>

<a class="btn btn-outline-warning fa fa-backward" style="background-color: #FFC300;color:black " href="\Employee\Index"> Back</a>
