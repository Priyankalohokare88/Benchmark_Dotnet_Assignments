@model Project2.Models.Department

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/LayoutPage1.cshtml";
}

<h2>Edit</h2>
<form action="/Department/Edit/@Model.Depid" method="post">
    <div class="form-group">
        <label>Department Id</label>
        <input type="text" class="form-control" id="Depid" name="Depid" value="@Model.Depid" readonly>
    </div>

    <div class="form-group">
        <label>Department Name</label>
        <input type="text" class="form-control" id="Depname" name="Depname" value="@Model.Depname">
    </div>
    <div class="form-group">
        <label>Department Location</label>
        <input type="text" class="form-control" id="DepLocation" name="DepLocation" value="@Model.DepLocation">
    </div>
    <br />
    <button class=" btn btn-outline-success">Submit</button>
    <a class=" btn btn-outline-info" href="\Department\Index">Cancel</a>

</form>

