<div class="form-group">
    <label>Department Location</label>

    <select class="form-control" id="e.Depid" name="e.Depid">
            <option value="">Please Select option</option>
            @foreach (var dep in ViewBag.dep)
            {
                <option value="@dep.Depid">@dep.DepLocation</option>
            }

        </select>

    @*<input type="text" class="form-control" id="e.Depid" name="e.Depid">*@


