@*index view table that code copy paste*@
<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Designation</th>
        <th>Manager Id</th>
        <th>Email Id</th>
        <th>Hire Date</th>
        <th>Salary</th>
        <th>Department id</th>
        <th>Department Name</th>
        <th>Depatment Location</th>




    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Empid</td>
    <td>@item.Empname</td>
    <td>@item.Designation</td>
    <td>@item.Mgid</td>
    <td>@item.Emailid</td>

    <td>
        @if (item.Hire_date.HasValue)
        {
            <span>@item.Hire_date.Value.ToString("d/M/yyyy")</span>
        }
    </td>
    <td>@item.sal</td>

    <td>@item.Department.Depid</td>
    <td>@item.Department.Depname</td>
    <td>@item.Department.DepLocation</td>




    <td>@Html.ActionLink(" ", "Details", new { id = item.Empid, Controller = "Employee" }, new { @class = "btn btn-outline-warning fa fa-info-circle", @style = "background-color: #FFC300;color:black " })</td>
    <td>@Html.ActionLink(" ", "Edit", new { id = item.Empid, Controller = "Employee" }, new { @class = "btn btn-outline-warning fa fa-edit", @style = "background-color: #FFC300;color:black " })</td>
    <td>
        @Html.ActionLink(" ",
             "Delete",
             "Employee",
             new { id = item.Empid },
             new { @class = "btn btn-outline-warning fa fa-trash", @style = "background-color: #FFC300;color:black ", onclick = "return confirm('Are sure wants to delete?');" }
            )
    </td>

</tr>

    }
</table>



